<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    tools:context="com.example.meita.rentalpemilik.TolakPembayaran.TolakPembayaran">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="1"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:text="Pilih Alasan Pembatalan :"
            android:padding="10dp"
            android:textSize="20sp"/>
        <CheckBox
            android:id="@+id/checkboxKendaraanTdkTersedia"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:text="Kendaraan Sudah Tidak Tersedia"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="5dp"
            android:textSize="17sp"/>
        <CheckBox
            android:id="@+id/checkboxBiayaKurang"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:text="Biaya Pembayaran Kurang"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="5dp"
            android:textSize="17sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical">
        <EditText
            android:id="@+id/editTextKeteranganPenolakkan"
            android:layout_width="320dp"
            android:layout_height="220dp"
            android:layout_gravity="center"
            android:background="@drawable/border_text_input"
            android:hint="Keterangan (opsional)"
            android:gravity="top"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayoutKonfirmasiPembayaran"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginTop="3dp"
        android:padding="5dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_weight="0.5">
        <Button
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="Konfirmasi Penolakkan Pembayaran"
            android:id="@+id/buttonKonfirmasiPenolakkan"
            android:background="@drawable/round_button"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>


</LinearLayout>
