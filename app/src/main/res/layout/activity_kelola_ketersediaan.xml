<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/putih">
    <LinearLayout
        android:id="@+id/linearLayoutPeringatan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18dp"
            android:text="Kendaraan yang anda pilih pada tanggal "/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textViewTglSewa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10/10/01"
                android:textSize="15dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" - "
                android:textSize="15dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/textViewTglKembali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10/10/01"
                android:textSize="15dp"
                android:textStyle="bold"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="tidak tersedia"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/orange"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutKelolaKetersediaan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18dp"
            android:text="Tanggal "/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/textViewTglSewa2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10/10/01"
            android:textSize="15dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" - "
            android:textSize="15dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/textViewTglKembali2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10/10/01"
            android:textSize="15dp"
            android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="23dp"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="Total Kendaraan : "/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="Jumlah Kendaraan Dipesan : "/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="Jumlah Kendaraan Tersedia : "/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp">
                <TextView
                    android:id="@+id/textViewTotalKendaraan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="Total"/>
                <TextView
                    android:id="@+id/textViewKendaraanDipesan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="jumlah"/>
                <TextView
                    android:id="@+id/textViewKendaraanTersedia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="jumlah"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:textSize="18dp"
            android:text="Silahkan atur jumlah kendaraan yang ingin anda ubah menjadi tidak tersedia pada tanggal tersebut dengan maksimal jumlah kendaraan sesuai dengan jumlah kendaraan tersedia"/>
        <LinearLayout
            android:layout_below="@+id/linear1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <com.gildaswise.horizontalcounter.HorizontalCounter
                android:id="@+id/horizontal_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:stepValue="1"
                app:textColor="@color/hitam"
                app:textSize="10dp"
                app:minusButtonColor="@color/merah"
                app:plusButtonColor="@color/hijau_tua"
                app:displayAsInteger="true"
                app:initialValue="1"
                app:maxValue="100"
                app:minValue="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:gravity="bottom|center">
            <Button
                android:layout_width="330dp"
                android:layout_height="match_parent"
                android:text="Simpan"
                android:id="@+id/buttonSimpan"
                android:background="@drawable/round_button"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
